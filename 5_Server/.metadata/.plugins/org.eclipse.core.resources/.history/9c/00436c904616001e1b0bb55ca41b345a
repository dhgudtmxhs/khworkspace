<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<!-- HTML 주석 (개발자 도구에 노출 O)-->

<%-- JSP 주석 (개발자 도구에 노출 X) --%>

<%-- 

	<% %> : 스크립틀릿(scriptlet) -> JSP에서 자바 코드를 작성할 수 있는 영역
	
	<%= %> : 표현식(Expression) -> 자바 코드의 값을 HTML 형식으로 표현(출력)


--%>


<% // 자바 코드 작성 영역 (scliptlet, 스크립틀릿)

	 int result = (int)request.getAttribute("whatever");
	/* String result = request.getParameter("whatever"); 아님*/
	
	
	// JSP에서도 요청시 전달받은 값 사용 가능
	
	String pizza = request.getParameter("pizza"); // String pizza = req.getParameter("pizza");
	String size = request.getParameter("size");
	String amount = request.getParameter("amount");
	
%>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>주문 결과</title>

	<style>
	
		#area{
			font-size : 18px;
			font-weight : bold;
		
		}
	
		h1{ color : lightcoral; }
	</style>

</head>
<body>


	<!-- webapp 폴더 내부 html/css/jsp 등은 서버 끄지 않고도 수정 가능하다. -->
	
	<div id="area">
	
		피자 : <%= pizza %>
		<br>
		사이즈 : 
		
			<% if(size.equals("R")){ %>
					Regular
				<%}else{%>
					Large
				<%}%> 
			
					<%-- <% String result = "";
					   if(size.equals("R")){
					       result = "regular";
					   }else{
					       result = "Large";
					   }
					%>
					<%= result %>
					--%>

		<br>
		수량 : <%= amount %>
	</div>
	
	<h1>계산 결과 : <%= result%> </h1>

</body>
</html>