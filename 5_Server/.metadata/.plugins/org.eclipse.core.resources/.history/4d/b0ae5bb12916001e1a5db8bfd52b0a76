package edu.kh.jsp.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


// @WebServlet("요청 주소") 어노테이션
// - 해당 클래스를 Servlet 클래스로 등록( <servlet> 태그 )하고
//   어떤 요청 주소를 처리할 지 지정( <servlet-mapping> 태그 )

// /JSPProject/login -> /login
@WebServlet("/login")
public class LoginServlet extends HttpServlet {
    
	
	
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		// 요청 시 전달된 input 태그의 값(== parameter) 얻어오기
		// (파라미터는 모두 String 타입이다!!)
		
		String inputId = req.getParameter("inputId");
		String inputPw = req.getParameter("inputPw");
		
		// 파라미터를 잘 얻어 왔는지 확인
		System.out.println("ID : " + inputId );
		System.out.println("Pw : " + inputPw );
		
		// 간이 로그인 확인 코드
		
		String result = null;
		
		if(inputId.equals("user01"))
		
		// jsp로 안한다면 out.print("<html>"); 이렇게 한 줄 씩 써야했음
		
		
		
	}

	
	
	
	
	
	
		
}